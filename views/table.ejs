<body>
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
            href="https://datatables.net">official DataTables documentation</a>.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a href="/create-data">create</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>firstName</th>
                            <th>lastName</th>
                            <th>email</th>
                            <th>password</th>
                            <th>mobile</th>
                            <th>expertise</th>
                            <th>title</th>
                            <th>description</th>
                            <th>workHistory</th>
                            <th>location</th>
                            <th>savedJob</th>
                            <th>rate</th>
                            <th>img</th>
                            <th>update</th>
                            <th>delete</th>
                            <th>block</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>firstName</th>
                            <th>lastName</th>
                            <th>email</th>
                            <th>password</th>
                            <th>mobile</th>
                            <th>expertise</th>
                            <th>title</th>
                            <th>description</th>
                            <th>workHistory</th>
                            <th>location</th>
                            <th>savedJob</th>
                            <th>rate</th>
                            <th>img</th>
                            <th>user update</th>
                            <th>delete</th>

                        </tr>
                    </tfoot>
                    <tbody>
                        <% user.forEach(element=> { %>
                            <tr>
                                <td>
                                    <%= element.firstName %>
                                </td>
                                <td>
                                    <%= element.lastName %>
                                </td>
                                <td>
                                    <%= element.email %>
                                </td>
                                <td>
                                    <%= element.password %>
                                </td>`
                                <td>
                                    <%= element.mobile %>
                                </td>
                                <td>
                                    <%= element.expertise %>
                                </td>
                                <td>
                                    <%= element.title %>
                                </td>
                                <td>
                                    <%= element.description %>
                                </td>
                                <td>
                                    <%= element.workHistory %>
                                </td>
                                <td>
                                    <%= element.location %>
                                </td>
                                <td>
                                    <%= element.savedJob %>
                                </td>
                                <td>
                                    <%= element.rate %>
                                </td>
                                <td>
                                    <%= element.img %>
                                </td>
                                <td>
                                    <a href="/update-view?id=<%= element._id %>">update</a>
                                </td>
                                <td>
                                    <a href="/user-delete?id=<%= element._id %>">delete</a>
                                </td>
                                <td>
                                    <!-- <a href="./user-block?id=<%= element._id %>">block</a> -->
                                    <a href="/user-block?id=<%= element._id %>&userBlock=<%= element.userBlock %>">
                                        <% if (element.userBlock) { %>
                                            UnBlock
                                            <% } else { %>block<%}%>
                                    </a>

                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- /.container-fluid -->

</body>